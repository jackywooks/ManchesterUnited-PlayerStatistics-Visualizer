<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="474.0" prefWidth="468.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dataVisualizer.PlayerChartController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BarChart fx:id="goalLeaderboard" accessibleText="sd" title="Goal Scorer Board">
     <xAxis>
       <CategoryAxis fx:id="playerAxis" label="Name" side="BOTTOM" />
     </xAxis>
     <yAxis>
       <NumberAxis fx:id="goalAxis" label="Goals" side="LEFT" />
     </yAxis>
   </BarChart>
    <Button fx:id="swtichTable" onAction="#switchToTableView" styleClass="btn,btn-danger" text="Show Data" />
</VBox>
