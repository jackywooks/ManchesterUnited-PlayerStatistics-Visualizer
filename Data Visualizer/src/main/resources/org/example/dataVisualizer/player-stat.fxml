<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="286.0" prefWidth="468.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dataVisualizer.PlayerStatController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <TableView fx:id="playerRecord" minHeight="400.0" minWidth="425.0" prefHeight="400.0" prefWidth="425.0">
     <columns>
       <TableColumn fx:id="nameColumn" minWidth="100.0" prefWidth="125.0" text="Name" />
         <TableColumn fx:id="positionColumn" minWidth="75.0" prefWidth="75.0" text="Position" />
       <TableColumn fx:id="goalColumn" minWidth="75.0" prefWidth="75.0" text="Goal" />
         <TableColumn fx:id="assistColumn" minWidth="75.0" prefWidth="75.0" text="Assist" />
         <TableColumn fx:id="ratingColumn" minWidth="75.0" prefWidth="75.0" text="Rating" />
     </columns>
   </TableView>
  <Button onAction="#showPlayerStat" styleClass="btn,btn-danger" text="Show Data" />
</VBox>
